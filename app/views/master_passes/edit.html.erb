<%= form_for :master_pass, url: master_pass_path, method: :patch do |f| %>
  <% if @errors %>
    <div id="error_explanation">
      <h2><%= pluralize(@errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Create a Master Password for new teachers</h2>

  <div class="field">
    <%= f.label :old_password %><br>
    <%= f.password_field :old_password %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirm_password %><br>
    <%= f.password_field :confirm_password %>
  </div>
  <div class="actions">
    <%= f.submit "Change Master Password" %>
  </div>

<% end %>
