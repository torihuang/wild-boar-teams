<section class='student-summary'>
  <h2><%= link_to "#{student.first_name} #{student.last_name}", student_path(student) %></h2>
  <p>
    <span>Team <%=student.team %></span>
    <span><%=student.gpa %>/4.0</span>
    <span><%=student.grade %></span>
    <span><%=student.gender %></span>
    <span><%=student.number_of_detentions %></span>
    <% if logged_in? && !current_user.has_student?(student) %>
      <span><%= link_to "Add to my Team", "teams/#{current_user.team.id}/student/#{student.id}", class: 'add-student-button' %></span>
    <% end %>
  </p>
</section>
