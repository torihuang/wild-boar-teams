<section class='student-summary'>
  <h2 id='student-name'><%= link_to "#{student.first_name} #{student.last_name}", student_path(student) %></h2>
  <p>
    <% if student.team %>
      <span class='team-name'>Team <%=student.team.name.capitalize %></span>
    <% else %>
      <span class='team-name'>Team UNASSIGNED</span>
    <% end %>
    <span><%=student.gpa.round(1) %>/4.0</span>
    <span><%=student.grade %></span>
    <span><%=student.gender %></span>
    <span><%=student.number_of_detentions %></span>
    <% if current_user.is_admin? %>
      <% if student.is_assigned? %>
        <br><span><%= link_to "Remove Student Assignment", "#", class: 'add-student-button btn-success' %></span>
      <% end %>
    <% elsif !current_user.is_admin? && !current_user.has_student?(student) %>
      <br><span><%= link_to "Add to my Team", "/students/#{student.id}/teams/#{current_user.team.id}", class: 'add-student-button btn btn-success' %></span>
    <% end %>
  </p>
</section>
